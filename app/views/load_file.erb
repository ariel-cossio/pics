<div class="container">
	<form  src='/secure/load_file' method='POST' enctype='multipart/form-data' class="well">
		<div class="form-group">
          <label for="filename">File:</label>
          <input name="fileName" type="file" class="filestyle" id="filename" data-buttonName="btn-primary" required>
    	</div>
    	<div class="form-group">
	          <label for="displayname">Display Name:</label>
	          <input name="displayname" type="text" class="form-control" id="displayname" placeholder="In construction">
	    </div>
	    <div class="form-group">
	          <label for="tags">Tags:</label>
	          <input name="tags" type="text" class="form-control" id="tags" placeholder="In construction">
	    </div>
		<p >
		<br/>
			<input name="upload" class="btn btn-primary" type='submit' value='Upload' />
			<input name="cancel" class="btn btn-primary" type='submit' value='Cancel' />
		</p>
		<script>
			$(":file").filestyle({buttonName: "btn-primary"});
		</script>
	</form>
</div>